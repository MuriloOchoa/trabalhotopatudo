<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Posts</h1>

  <hr>


  <table class="table">
    <thead>
    <tr>
      <th>Text</th>
      <th>Subject</th>
      <th>Titile</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.text %></td>
        <td><%= post.subject %></td>
        <td><%= post.title %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Exibir', post, :class => "btn btn-primary" %></button>
            <%= link_to 'Editar', edit_post_path(post), :class => "btn btn-warning" %>
            <%= link_to 'Excluir', post, :class => "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %></button>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<hr>
<%= link_to 'Novo Post', new_post_path, :class => "btn btn-success" %>